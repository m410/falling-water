{
  "name": "backoffice",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "bo",
  "sourceRoot": "apps/backoffice/src",
  "tags": ["type:app", "scope:admin"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backoffice",
        "browser": "apps/backoffice/src/main.ts",
        "tsConfig": "apps/backoffice/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/backoffice/public"
          }
        ],
        "styles": ["apps/backoffice/src/scss/styles.scss"],
        "stylePreprocessorOptions": {
          "sass": {
            "silenceDeprecations": ["import"]
          }
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "port": 4300,
        "proxyConfig": "apps/backoffice/proxy.config.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "backoffice:build:production"
        },
        "development": {
          "buildTarget": "backoffice:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "backoffice:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/backoffice"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "backoffice:build",
        "port": 4300,
        "staticFilePath": "dist/apps/backoffice/browser",
        "spa": true
      }
    }
  }
}
